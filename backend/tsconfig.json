{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es6", "es7"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "stripInternal": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "docs", "__tests__"]
}
